{
  "version": 1,
  "scan_roots": [
    "."
  ],
  "exclude_dirs": [
    ".git",
    ".venv",
    "__pycache__",
    ".pytest_cache",
    ".ruff_cache",
    "wheelhouse",
    "state"
  ],
  "exclude_globs": [
    "assets/help/*.gif",
    "assets/help/*.png",
    "tests/replay/golden/*"
  ],
  "max_file_bytes": 1048576,
  "patterns": [
    {
      "id": "aws_access_key",
      "regex": "AKIA[0-9A-Z]{16}"
    },
    {
      "id": "github_personal_token",
      "regex": "gh[pousr]_[A-Za-z0-9]{20,}"
    },
    {
      "id": "github_fine_grained_token",
      "regex": "github_pat_[A-Za-z0-9_]{70,}"
    },
    {
      "id": "openai_api_key",
      "regex": "sk-[A-Za-z0-9]{20,}"
    },
    {
      "id": "private_key_header",
      "regex": "-----BEGIN (?:RSA |EC |OPENSSH |DSA )?PRIVATE KEY-----"
    },
    {
      "id": "slack_token",
      "regex": "xox[baprs]-[A-Za-z0-9-]{10,}"
    },
    {
      "id": "stripe_live_secret",
      "regex": "sk_live_[A-Za-z0-9]{16,}"
    }
  ],
  "allowlist": []
}

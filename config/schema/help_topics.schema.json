{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "tet4d/help_topics.schema.json",
  "title": "tet4d help topics registry",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "topics"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "topics": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "title",
          "lane",
          "priority",
          "dimensions",
          "contexts",
          "summary",
          "sections"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_]+$"
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "lane": {
            "type": "string",
            "enum": ["quick", "full", "reference"]
          },
          "priority": {
            "type": "integer",
            "minimum": 0
          },
          "dimensions": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
              "type": "integer",
              "enum": [2, 3, 4]
            }
          },
          "contexts": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
              "type": "string",
              "enum": ["launcher", "pause", "gameplay", "keybindings"]
            }
          },
          "summary": {
            "type": "string",
            "minLength": 1
          },
          "sections": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["id", "title", "lines"],
              "properties": {
                "id": {
                  "type": "string",
                  "pattern": "^[a-z0-9_]+$"
                },
                "title": {
                  "type": "string",
                  "minLength": 1
                },
                "lines": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "string",
                    "minLength": 1
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "tet4d/help_runtime_content.schema.json",
  "title": "tet4d runtime help content",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "fallback_topic",
    "topic_blocks",
    "value_templates",
    "action_group_headings"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "fallback_topic": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "title", "summary", "sections"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "title": { "type": "string", "minLength": 1 },
        "summary": { "type": "string", "minLength": 1 },
        "sections": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["id", "title", "lines"],
            "properties": {
              "id": { "type": "string", "minLength": 1 },
              "title": { "type": "string", "minLength": 1 },
              "lines": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string", "minLength": 1 }
              }
            }
          }
        }
      }
    },
    "topic_blocks": {
      "type": "object",
      "minProperties": 1,
      "propertyNames": { "pattern": "^[a-z0-9_]+$" },
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "required": ["compact_lines", "full_lines"],
        "properties": {
          "compact_lines": {
            "type": "array",
            "items": { "type": "string" }
          },
          "full_lines": {
            "type": "array",
            "items": { "type": "string" }
          },
          "compact_topic_limit": {
            "type": "integer",
            "minimum": 0
          },
          "compact_overflow_line": {
            "type": "string"
          }
        }
      }
    },
    "value_templates": {
      "type": "object",
      "minProperties": 1,
      "propertyNames": { "pattern": "^[a-z0-9_]+$" },
      "additionalProperties": { "type": "string", "minLength": 1 }
    },
    "action_group_headings": {
      "type": "object",
      "minProperties": 1,
      "propertyNames": { "pattern": "^[a-z0-9_]+$" },
      "additionalProperties": { "type": "string", "minLength": 1 }
    }
  }
}
